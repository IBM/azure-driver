{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "route_table_location": {
            "value": "{{route_table_location}}"
        },
        "route_table_name": {
            "value": "{{route_table_name}}"
        },
        "route_table_disable_bgp_route_propagation": {
            "value": {{route_table_disable_bgp_route_propagation | tojson}}
        },
        "branch_offices": {
            {% if branch_offices %}
            "value": {{ branch_offices | tojson}}
            {% else %}
            "value": {{[]}}
            {% endif %}
        },
        "route_next_hop_ip_address": {
            {% if private_subnet_cidr %}
            "value": "{% set ipsegments = private_subnet_cidr.split('.')%}{{ ('{}.{}.{}.{}'.format(ipsegments[0], ipsegments[1], ipsegments[2], '4')) }}"
            {% else %}
            "value": "{{ '' }}"
            {% endif %}
        }
        
        
    }
}
